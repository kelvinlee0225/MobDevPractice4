<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobDevPractice4.Views.DiscoveryView">
    <ContentView.Content>
        <Grid Style="{StaticResource DiscoveryViewGrid}">
            <Image Grid.Row="0"  Source="{Binding Image}" Margin="10"/>
            <Label Grid.Row="1"  Text="{Binding Title}" Style="{StaticResource TitlelabelStyle}"/>
            <Label Grid.Row="2"  Text="{Binding TotalPlaces}" Style="{StaticResource TotalPlaceslabelStyle}"/>
        </Grid>
    </ContentView.Content>
</ContentView>